# Server
NODE_ENV=development
PORT=4000

# MongoDB (Docker - local)
MONGODB_URI=mongodb://admin:admin123@localhost:27017/notu-db?authSource=admin

# Redis (Docker - local)
REDIS_URL=redis://:redis123@localhost:6379

# MinIO (Docker - local)
AWS_ENDPOINT=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET=notu-recordings

# WhisperX (Docker - local)
WHISPERX_API_URL=http://localhost:5005

# Upload Settings
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# JWT Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth (optional - for verification)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
